# Athletic PHP - Root Directory Protection
# This file protects sensitive files in the root directory

# Deny access to all files by default
Require all denied

# Allow access to public directory
<Directory "public">
    Require all granted
</Directory>

# Protect sensitive files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<Files ".env">
    Require all denied
</Files>

<Files "composer.json">
    Require all denied
</Files>

<Files "composer.lock">
    Require all denied
</Files>

<Files "bootstrap.php">
    Require all denied
</Files>

# Redirect all requests to public directory
RewriteEngine On
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ public/$1 [L]
